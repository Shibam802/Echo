<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: radial-gradient(circle at top, #0a0a0a, #000);
    }
    .glow-card {
      transition: all 0.3s ease-in-out;
    }
    .glow-card:hover {
      box-shadow: 0 0 15px rgba(59, 130, 246, 0.3);
      transform: translateY(-3px);
    }
    .fade-in {
      animation: fadeIn 0.8s ease-in-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body class="text-white min-h-screen">

  <!-- Top Bar -->
  <header class="flex justify-between items-center px-10 py-5 border-b border-zinc-800 bg-black/50 backdrop-blur-sm sticky top-0 z-50">
    <h2 class="text-2xl font-semibold tracking-wide text-blue-400">User Profile</h2>
    <a 
      class="bg-red-500 hover:bg-red-600 transition-all rounded-md px-4 py-2 text-sm font-medium"
      href="/logout"
    >
      Logout
    </a>
  </header>

  <main class="p-10 max-w-5xl mx-auto">

    <!-- Greeting -->
    <h3 class="text-4xl mb-2 font-bold">
      üëã Hello, <span class="text-blue-400"><%= user.name %></span>
    </h3>
    <p class="text-zinc-400 mb-10">Welcome back! Create a new post and share your thoughts.</p>

    <!-- Post creation -->
    <form action="/post" method="POST" class="mb-16 fade-in">
      <textarea 
        name="content"
        placeholder="What's on your mind?" 
        class="p-4 w-full md:w-2/3 resize-none bg-zinc-950 border border-zinc-700 rounded-lg text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all duration-200 h-32"
        required
      ></textarea>
      <input 
        type="submit" 
        value="Create New Post" 
        class="px-6 py-2 bg-blue-600 hover:bg-blue-700 transition-all rounded-md mt-3 font-semibold shadow-md hover:shadow-blue-500/20 cursor-pointer"
      />
    </form>

    <!-- User Posts -->
    <section class="posts fade-in">
      <h3 class="text-lg text-zinc-400 mb-5 border-b border-zinc-700 pb-2">Your Recent Posts</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% user.posts.slice().reverse().forEach(function(post) { %>
          <div class="glow-card bg-zinc-900/80 border border-zinc-800 rounded-xl p-5 backdrop-blur-sm">
            <div class="flex items-center justify-between mb-2">
              <h4 class="text-blue-400 font-medium">@<%= user.name %></h4>
              <span class="text-xs text-zinc-500 italic">Just now</span>
            </div>
            <p class="text-sm leading-relaxed text-zinc-200"><%= post.content %></p>
<small class="mt-2 inline-block"><%=post.likes.length%>likes</small>
            <div class="flex gap-5 mt-3 text-sm">
              <a class="text-blue-500 hover:text-blue-400 transition-all" href="/like/<%=post._id %>"><%= post.likes.indexOf(user._id)===-1? "‚ù§Ô∏è Like":"Unlike" %></a>
              <a class="text-zinc-400 hover:text-white transition-all" href="/edit/<%=post._id%>">‚úèÔ∏è Edit</a>
              <a class="text-red-400 hover:text-red-500 transition-all" href="#">üóëÔ∏è Delete</a>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

  </main>
</body>
</html>
