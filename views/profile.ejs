<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: radial-gradient(circle at top, #0a0a0a, #000);
    }
    .glow-card {
      transition: all 0.3s ease-in-out;
    }
    .glow-card:hover {
      box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
      transform: translateY(-5px);
    }
    .fade-in {
      animation: fadeIn 0.6s ease-in-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body class="text-white min-h-screen font-[Inter] tracking-tight">

  <!-- Navbar -->
  <header class="flex justify-between items-center px-10 py-5 border-b border-zinc-800 bg-black/60 backdrop-blur-md sticky top-0 z-50">
    <h2 class="text-2xl font-semibold text-blue-400">My Profile</h2>
    <a 
      href="/logout"
      class="bg-red-500 hover:bg-red-600 transition-all rounded-md px-4 py-2 text-sm font-medium"
    >
      Logout
    </a>
  </header>

  <!-- Main Container -->
  <main class="p-8 max-w-6xl mx-auto fade-in">

    <!-- Profile Section -->
    <section class="flex flex-col md:flex-row items-center md:items-start gap-6 bg-zinc-900/80 border border-zinc-800 rounded-2xl p-8 mb-12 backdrop-blur-md">
      <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-blue-500 shadow-lg">
        <img src="/images/uploads/<%= user.profilepic %>" alt="Profile Picture" class="w-full h-full object-cover">
      </div>

      <div class="flex-1 text-center md:text-left">
        <h3 class="text-3xl font-bold mb-1">üëã Hello, <span class="text-blue-400"><%= user.name %></span></h3>
        <p class="text-zinc-400 mb-4">Welcome back! Ready to share something new today?</p>
        <div class="flex justify-center md:justify-start gap-3">
          <span class="bg-blue-500/10 text-blue-400 px-3 py-1 rounded-full text-sm border border-blue-400/20">
            Posts: <%= user.posts.length %>
          </span>
          <span class="bg-green-500/10 text-green-400 px-3 py-1 rounded-full text-sm border border-green-400/20">
            Likes: <%= user.posts.reduce((sum, p) => sum + p.likes.length, 0) %>
          </span>
        </div>
      </div>
    </section>

    <!-- Create Post -->
    <section class="mb-14">
      <form action="/post" method="POST" class="bg-zinc-900/70 border border-zinc-800 rounded-2xl p-6 backdrop-blur-md shadow-lg">
        <h4 class="text-xl font-semibold text-blue-400 mb-3">Create a New Post</h4>
        <textarea 
          name="content"
          placeholder="What's on your mind, <%= user.name %>?"
          class="p-4 w-full resize-none bg-zinc-950 border border-zinc-700 rounded-lg text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all duration-200 h-32 mb-4"
          required
        ></textarea>
        <button 
          type="submit"
          class="px-6 py-2 bg-blue-600 hover:bg-blue-700 rounded-md font-semibold shadow-md hover:shadow-blue-500/30 transition-all"
        >
          Post
        </button>
      </form>
    </section>

    <!-- Recent Posts -->
    <section>
      <h3 class="text-lg text-zinc-300 mb-6 font-medium border-b border-zinc-700 pb-2">Your Recent Posts</h3>
      <% if (user.posts.length === 0) { %>
        <p class="text-zinc-500 italic text-center">You haven‚Äôt created any posts yet.</p>
      <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% user.posts.slice().reverse().forEach(function(post) { %>
          <div class="glow-card bg-zinc-900/70 border border-zinc-800 rounded-2xl p-5 backdrop-blur-sm shadow-lg">
            <div class="flex items-center justify-between mb-3">
              <h4 class="text-blue-400 font-medium">@<%= user.name %></h4>
              <span class="text-xs text-zinc-500 italic">Just now</span>
            </div>

            <p class="text-sm text-zinc-200 leading-relaxed mb-3">
              <%= post.content %>
            </p>

            <div class="flex justify-between items-center text-sm">
              <div class="flex items-center gap-2 text-zinc-400">
                <span>‚ù§Ô∏è <%= post.likes.length %></span>
              </div>

              <div class="flex gap-3">
                <a href="/like/<%= post._id %>" class="text-blue-500 hover:text-blue-400">
                  <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                </a>
                <a href="/edit/<%= post._id %>" class="text-yellow-400 hover:text-yellow-300">Edit</a>
                <a href="/delete/<%= post._id %>" class="text-red-500 hover:text-red-400">Delete</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <% } %>
    </section>

  </main>
</body>
</html>
