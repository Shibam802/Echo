<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Starry Night Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Canvas full screen background */
    #bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: black;
      z-index: 0;
      display: block;
    }
  </style>
</head>
<body class="text-white flex items-center justify-center min-h-screen relative overflow-hidden">

  <!-- Starfield Canvas -->
  <canvas id="bg"></canvas>

  <!-- Login Box -->
  <div class="absolute inset-0 flex items-center justify-center z-10">
    <div class="bg-zinc-950/70 backdrop-blur-lg rounded-2xl shadow-2xl p-8 w-full max-w-md border border-zinc-800">
      <h3 class="text-3xl font-bold mb-6 text-center text-blue-400 tracking-wide">Login</h3>

      <form action="/login" method="post" class="flex flex-col gap-4">
        <div class="flex flex-col">
          <label class="text-sm text-zinc-400 mb-1">Email</label>
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            class="px-4 py-2 rounded-md bg-zinc-800 border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder:text-zinc-500"
            required
          >
        </div>

        <div class="flex flex-col">
          <label class="text-sm text-zinc-400 mb-1">Password</label>
          <input
            type="password"
            name="password"
            placeholder="Enter your password"
            class="px-4 py-2 rounded-md bg-zinc-800 border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder:text-zinc-500"
            required
          >
        </div>

        <button
          type="submit"
          class="mt-4 py-2 rounded-md bg-blue-600 hover:bg-blue-700 transition-all duration-200 font-semibold"
        >
          Login
        </button>
      </form>

      <p class="text-center text-sm text-zinc-500 mt-5">
        Donâ€™t have an account?
        <a href="/" class="text-blue-400 hover:text-blue-300 underline">Sign up</a>
      </p>
    </div>
  </div>

  <!-- Star Animation Script -->
  <script>
    const canvas = document.getElementById("bg");
    const ctx = canvas.getContext("2d");

    let width = (canvas.width = window.innerWidth);
    let height = (canvas.height = window.innerHeight);

    const stars = [];
    const numStars = 200;

    for (let i = 0; i < numStars; i++) {
      stars.push({
        x: Math.random() * width,
        y: Math.random() * height,
        radius: Math.random() * 1.2,
        alpha: Math.random(),
        speed: Math.random() * 0.02 + 0.005,
      });
    }

    function animate() {
      ctx.fillStyle = "black";
      ctx.fillRect(0, 0, width, height);

      stars.forEach((s) => {
        s.alpha += s.speed;
        const twinkle = Math.abs(Math.sin(s.alpha * Math.PI));

        ctx.beginPath();
        ctx.arc(s.x, s.y, s.radius, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(255, 255, 255, ${twinkle})`;
        ctx.shadowBlur = 8;
        ctx.shadowColor = "white";
        ctx.fill();
        ctx.closePath();
      });

      requestAnimationFrame(animate);
    }

    animate();

    // Adjust when window resizes
    window.addEventListener("resize", () => {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
    });
  </script>
</body>
</html>




